-- Tibia 8.1+ this is false.
-- If you have a tile with 50 gold, and you try to add 70 gold
-- Or any quantity of gold that would make it surpass 100
-- The items will not merge and instead will be treated as different objects.
tileOldschoolItemStacking = true

-- Multi-floor monster respawn blocking
-- 8.1+ this is set to false.
-- Underground blocks respawn +2 and -2 floors
-- Groundfloor player blocks respawning +7 floors above.
spawnMultifloorRespawnBlock = true

-- Tibia 8.1 and less has this as "true"
-- This means that if a monster is trying to respawn but there is a player around
-- It will not respawn and the timer will reset to whatever respawn time it has again.
-- This results in slower respawn time in general.
-- Every OT sets this to "false" for modern Tibia behavior.
spawnsResetTimerOnFailedSpawn = true

-- Tibia 8.1+ has this as false
spawnOneMonsterAtATime = true

-- Show aggressive spell effects in protection areas as a GM? 
-- Default: false
gamemasterDamageProtectOnZoneEffects = false

-- Monsters invisibile is not a real invisible but rather a blank outfit (when using Tibia classic client they can hack this by using bots)
-- You can also look at creatures that are invisible
-- Keep as true for classic Tibia experience
classicMonsterInvisibility = true

-- Max number of containers a player may open
-- Default: 15, max: 254, consider using a higher number when using OTC=
maxOpenContainers = 15

-- When looking at a house door with an item, shall it display house info or the item's ?
houseDoorsDisplayHouseInfo = false

-- Allow searching for a valid container inside inner containers of a player?
-- This only applies for using an item from a distance
deepPlayerContainerSearch = false 

-- Allow sending parcels and letters with trash on top of mailboxes
trashableMailbox = true

-- Failed account login attempts to disable an account and ban IP-Address
-- Use 0 to disable.
failedLoginAttemptsAccountLock = 10
failedLoginAttemptsIPBan = 15

accountLockDuration = 5 * 60 * 1000
ipLockDuration = 30 * 60 * 1000

ipLockMessage = "IP address blocked for 30 minutes. Please wait."
accountLockMessage = "Account disabled for five minutes. Please wait."

-- If the OTBM map has been updated, upon login, player will be sent to the temple.
uponMapUpdateSendPlayersToTemple = true

-- Allow items to permanently decay inside player depots without the need of the player being next to the depot?
-- False: items only decay if the player can access the depot
-- True: the items decay at all times even if the player is not around
itemsDecayInsideDepots = false

-- When a player uses a rune on the ground into a creature, if the creature walks or whatever
-- The rune will be used on the creature.
-- Default: true (RealOTS & Tibia)
allowRuneAimBotFromDistance = true

-- 7.4 : false (one monster per spawn cycle check)
-- 7.7+ : true (all monsters will spawn per spawn cycle check)
spawnAllMonstersPerSpawn = false

-- Players inside any patched sector will be teleported to their temple.
templePlayersInPatchedSectors = true

